{
  "name": "thread-sense",
  "version": "1.0.0",
  "author": "Asish Ranjan Sahu <asishranjansahu@gmail.com>",
  "main": "electron-main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "electron .",
    "electron:build": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.threadsense.app",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "files": [
      "dist/**/*",
      "electron-main.cjs",
      "package.json"
    ]
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "chart.js": "^4.5.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "electron-is-dev": "^2.0.0",
    "framer-motion": "^12.31.0",
    "jsonwebtoken": "^9.0.3",
    "jspdf": "^2.5.1",
    "lucide-react": "^0.563.0",
    "mongoose": "^9.1.6",
    "react": "^18",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^18",
    "react-router-dom": "^7.13.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4",
    "autoprefixer": "^10.4.24",
    "electron": "^34.3.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "vercel": "^50.11.0",
    "vite": "^5",
    "vite-plugin-pwa": "^1.2.0"
  }
}